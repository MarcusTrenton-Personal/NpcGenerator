<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>1200px-2-Dice-Icon.svg.ico</ApplicationIcon>
    <Authors>Marcus Trenton</Authors>
    <Company />
    <Description>Randomly generate NPCs' demographics</Description>
    <Copyright>Marcus Trenton</Copyright>
    <RepositoryType>Git</RepositoryType>
    <PackageTags></PackageTags>
    <RepositoryUrl>https://github.com/MarcusTrenton-Personal/NpcGenerator.git</RepositoryUrl>
    <PackageIcon>1200px-2-Dice-Icon.svg.ico</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>

  <ItemGroup>
    <None Include="1200px-2-Dice-Icon.svg.ico">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <Target Name="TestBeforePublish" BeforeTargets="Publish">
    <Message Text="Running tests before allowing publishing" Importance="high" />
    <Exec Command="dotnet restore ..\Tests\Tests.csproj" ConsoleToMsBuild="true"/>
    <Exec Command="dotnet msbuild ..\Tests\Tests.csproj -p:Configuration=Debug" ConsoleToMsBuild="true"/>
    <Exec Command='"C:\Program Files (x86)\Microsoft Visual Studio\2019\Community\Common7\IDE\Extensions\TestPlatform\vstest.console.exe" ..\Tests\bin\Debug\netcoreapp3.1\Tests.dll' 
          ConsoleToMsBuild="true"
          />
  </Target>

  <Target Name="PublishSampleFiles" AfterTargets="Publish">
    <Message Text="Copying Sample Configurations folder to Dropbox" Importance="high" />
    <ItemGroup>
      <Sample Include="..\Sample Configurations\*.csv" />
    </ItemGroup>
    <Copy SourceFiles="@(Sample)" DestinationFolder="D:\BackThisUp\Dropbox\Urthsark\NPC Generator\Sample Configurations" />
  </Target>

</Project>