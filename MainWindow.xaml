<Window x:Class="NpcGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NpcGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="100,100,0,0">
                <TextBlock x:Name="configurationLabel" Margin="10" Text="Configuration File" TextWrapping="Wrap" VerticalAlignment="Top"/>
                <Button x:Name="configurationButton" Margin="10" Click="ChooseConfiguration">
                    <TextBlock x:Name="configurationButtonText" Margin="1" Text="Choose"/>
                </Button>
                <TextBlock x:Name="configurationPath" Margin="10" Text="..." TextWrapping="Wrap" VerticalAlignment="Top"/>
            </StackPanel>
            
        </StackPanel>
        

    </Grid>
</Window>
